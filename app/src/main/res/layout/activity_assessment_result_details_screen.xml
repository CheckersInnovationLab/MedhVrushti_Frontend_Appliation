<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".NavigationDrawerPkg.AssessmentResultDetailsScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/assessment_Result_Details_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="#233CCC"
        app.background="#233CCC"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/assessmentResultDetails_Toolbar_back_button"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_icon_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assessment Result"

                android:layout_toRightOf="@id/edit_personal_detailsToolbar_back_button"
                android:id="@+id/assessment_solution_Toolbar_title"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/Result_details_card_1_id"
        android:layout_below="@+id/assessment_Result_Details_toolbar_id"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#344AC1">

            <LinearLayout
                android:id="@+id/layout_1_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/AssessmentResultDetails_AssessmentName_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment Name"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_1.0_id"
                android:layout_below="@+id/layout_1_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DFDFE1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">




            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_2_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/layout_1_id">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/test_icon2"/>


                    <TextView
                        android:id="@+id/AssessmentResultDetails_ObtainedMarks_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Obtained Marks"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textStyle="bold|italic"/>
                    <TextView
                        android:id="@+id/AssessmentResultDetails_ObtainedMarks_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/AssessmentResultDetails_OutOfMarks_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out Of 200"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="#E1E3E4"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/rating_icon"/>


                    <TextView
                        android:id="@+id/AssessmentResultDetails_RankingText_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Ranking"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textStyle="bold|italic"/>
                    <TextView
                        android:id="@+id/AssessmentResultDetails_Ranking_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="152"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/AssessmentResultDetails_Ranking_OutOf_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out Of 200"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="#E1E3E4"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/Result_details_card_2_id"
        android:layout_below="@+id/Result_details_card_1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"

        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
          app:cardCornerRadius="@dimen/_10sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/card_back_view_new"

                android:orientation="vertical">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/correct_icon"
                    android:layout_marginTop="@dimen/_15sdp"

                    android:layout_gravity="center"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#717171"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/AssessmentResultDetails_CorrectQuestionCount_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="#108E15"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/card_back_view_new"

                android:orientation="vertical">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/wrong_icon"
                    android:layout_marginTop="@dimen/_15sdp"

                    android:layout_gravity="center"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wrong"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#717171"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/AssessmentResultDetails_WrongQuestionCount_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="#CC0303"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/card_back_view_new"

                android:orientation="vertical">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/unanswered_icon"
                    android:layout_marginTop="@dimen/_15sdp"

                    android:layout_gravity="center"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#717171"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/AssessmentResultDetails_UnAnsweredCountCount_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="#A57C04"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>






    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/Result_details_card_3_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_below="@+id/Result_details_card_2_id"
        app:cardCornerRadius="@dimen/_10sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analysis Report"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#454444"
                android:textSize="@dimen/_20ssp"
                android:layout_marginLeft="@dimen/_15sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accuracy"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:id="@+id/numberbar1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="20dp"
                    custom:progress_unreached_bar_height="2dp"
                    custom:progress_reached_bar_height="5dp"
                    custom:progress_current="50"
                    style="@style/NumberProgressBar_Default"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:id="@+id/numberbar2"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_weight="1"
                    custom:progress_current="20"
                    custom:progress_unreached_bar_height="2dp"
                    custom:progress_reached_bar_height="5dp"
                    android:layout_width="match_parent"
                    style="@style/NumberProgressBar_Passing_Green"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correct"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:id="@+id/numberbar3"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    style="@style/NumberProgressBar_Relax_Blue"
                    custom:progress_current="30"
                    custom:progress_unreached_bar_height="2dp"
                    custom:progress_reached_bar_height="5dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wrong"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"/>


                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:id="@+id/numberbar4"
                    android:layout_width="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    style="@style/NumberProgressBar_Grace_Yellow"
                    custom:progress_current="40"
                    custom:progress_unreached_bar_height="2dp"
                    custom:progress_reached_bar_height="7dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preview"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"/>


                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    custom:progress_unreached_color="#CCCCCC"
                    custom:progress_reached_color="#3498DB"

                    custom:progress_unreached_bar_height="2dp"
                    custom:progress_reached_bar_height="7dp"

                    custom:progress_text_size="10sp"
                    custom:progress_text_color="#3498DB"
                    custom:progress_text_offset="1dp"
                    custom:progress_text_visibility="visible"

                    custom:progress_max="100"
                    custom:progress_current="80"
                    />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/Result_details_card_3_id"
            android:background="#787878">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Leader-board"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white"/>
        </RelativeLayout>


    </RelativeLayout>
    </ScrollView>
</RelativeLayout>