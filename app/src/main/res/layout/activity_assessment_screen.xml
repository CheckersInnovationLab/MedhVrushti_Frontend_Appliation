<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E9ED"
    tools:context=".AssessmentSection_pkg.Assessment_Screen">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Assessment_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="#1731C3"
        app.background="#fff"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit_personal_detailsToolbar_back_button"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_icon_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkers Innovation Lab"
                android:layout_toRightOf="@id/edit_personal_detailsToolbar_back_button"
                android:id="@+id/MainToolbar_title"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"

                />

            <TextView
                android:id="@+id/Assessment_submit_button_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textStyle="bold"
                android:textSize="@dimen/_13ssp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:textColor="#CBDDEC"/>

            <!--            <ImageView-->
            <!--                android:id="@+id/Home_option_menu_id"-->
            <!--                android:layout_width="@dimen/_30sdp"-->
            <!--                android:layout_height="@dimen/_26sdp"-->
            <!--                android:layout_centerVertical="true"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_gravity="center_vertical"-->
            <!--                android:src="@drawable/"/>-->

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Assessment_toolbar_id"
        android:layout_above="@+id/below_layout_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_below="@+id/Assessment_toolbar_id"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Assessment_number_text_id"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/question_number_back"
                        android:text="56"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_20sdp"/>

                    <RelativeLayout
                        android:id="@+id/Assessment_lay"
                        android:layout_width="1.5dp"
                        android:layout_toRightOf="@+id/Assessment_number_text_id"
                        android:layout_height="match_parent"
                        android:background="#C3BEBE"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/Assessment_time_text_id"
                        android:layout_toRightOf="@+id/Assessment_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:52"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_13ssp"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/book_mark_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/bookmark_filled_icon"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/Assessment_question_text_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="what is the function of array in java programming.what is the function of array in java programming."
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="#252525"/>


                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/option1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="#fff"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/option_1_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/number_id"
                    android:text="answer of a question"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13ssp"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/option2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#fff"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number2_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2."
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/option_2_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/number_id"
                    android:text="answer of a question"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13ssp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/option3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#fff"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number3_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3."
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/option_3_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/number_id"
                    android:text="answer of a question answer of a questionanswer of a question"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13ssp"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/option4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#fff"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number4_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4."
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/option_4_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/number_id"
                    android:text="answer of a question answer of a question answer of a questionanswer of a question"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13ssp"/>


            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/below_layout_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:background="#313132">

        <RelativeLayout
            android:id="@+id/Assessment_skip_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">



                <TextView
                    android:id="@+id/Assessment_skip_button_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skip"
                    android:textColor="#fff"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"/>


            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"/>
        <RelativeLayout
            android:id="@+id/Assessment_next_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/nextQues_button_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textColor="#fff"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_toRightOf="@+id/nextQues_button_id"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:src="@drawable/forward_icon_white"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>