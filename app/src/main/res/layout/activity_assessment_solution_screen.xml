<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".commonActivityPackage.Assessment_Solution_Screen">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/assessment_solution_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="#233CCC"
        app.background="#233CCC"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/assessment_solution_Toolbar_back_button"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_icon_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solutions"

                android:layout_toRightOf="@id/edit_personal_detailsToolbar_back_button"
                android:id="@+id/assessment_solution_Toolbar_title"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_18sdp"
                android:layout_centerVertical="true"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>





    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/assessment_solution_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Assessment_solution_recyclerView"/>




</RelativeLayout>