<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".storePackage.StoreMainFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"

        android:id="@+id/Store_Subscription_ads_cardView_id">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="6"
            android:orientation="horizontal"

            android:background="#E2D6F6">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ace Your Preparation "
                    android:textStyle="bold"
                    android:textSize="@dimen/_16ssp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:id="@+id/ace_preparation_text_id"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn with live classes from top educators,get personalised guidance through 1:1 live mentorship and lot "
                    android:layout_below="@+id/ace_preparation_text_id"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:id="@+id/text1_id"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Subscription"
                    android:layout_below="@+id/text1_id"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#028507"
                    app:backgroundTint="#028507"
                    android:id="@+id/get_subscription_button_id"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:gravity="end">


<!--                <com.airbnb.lottie.LottieAnimationView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    app:lottie_autoPlay="true"-->
<!--                    app:lottie_loop="true"-->
<!--                    app:lottie_rawRes="ass" />-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-40dp"
                        android:layout_marginRight="-50dp"


                        android:src="@drawable/testing_icon5"/>


            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/Store_Subscription_ads_cardView_id">

<!--        <TextView-->
<!--            android:id="@+id/Store_courses_heading_id"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Courses"-->
<!--            android:textSize="@dimen/_20ssp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/black"-->
<!--            android:layout_marginLeft="@dimen/_10sdp"/>-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Store_courses_recycler_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />






    </RelativeLayout>
</RelativeLayout>