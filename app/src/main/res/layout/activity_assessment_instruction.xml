<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".commonActivityPackage.Assessment_Instruction_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/are_you_ready_button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.scwang.wave.MultiWaveHeader
                android:id="@+id/waveHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                app:mwhCloseColor="#0171CA"
                app:mwhStartColor="#E4E8FF"
                app:mwhWaveHeight="100dp"
                />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/back_blue"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <ImageView
                android:id="@+id/study_image_001"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/test_reminder_icon1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentEnd="true"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Name"
                android:layout_below="@+id/study_image_001"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="-20dp"
                android:textColor="#0066CC"
                android:textStyle="bold"
                android:id="@+id/Test_name_oo1"/>

            <LinearLayout
                android:id="@+id/layout1001"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@+id/Test_name_oo1"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginTop="@dimen/_50sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/question_icon001"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/question_icon"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textColor="#575757"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Questions"
                            android:textStyle="italic"
                            android:textSize="@dimen/_12ssp"/>




                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/time_icon001"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"

                        android:src="@drawable/time_iconnew"

                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center"

                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textColor="#575757"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minutes"
                            android:textStyle="italic"
                            android:textSize="@dimen/_12ssp"/>




                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/layout1001">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instruction"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:textColor="#555454"
                    android:layout_marginTop="@dimen/_20sdp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/instruction_icon1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#636363"
                        android:layout_gravity="center_vertical"
                        android:text="1.0 marks is awarded to correct attempts and 0.0 marks for incorrect attempts."
                        android:textStyle="normal"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/instruction_icon1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#636363"
                        android:text="Tap on option to select the correct answer."
                        android:textStyle="normal"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/book_mark_icon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#636363"
                        android:layout_gravity="center_vertical"
                        android:text="Tap on the Bookmark icon to save interesting question."
                        android:textStyle="normal"/>


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/start_assessment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:background="@drawable/button_back_view"
        app:backgroundTint="#0778EA"
        android:backgroundTint="#0774E1"
        android:textSize="@dimen/_15ssp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>