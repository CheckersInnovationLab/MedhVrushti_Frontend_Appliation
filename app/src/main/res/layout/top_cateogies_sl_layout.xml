<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_120sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/top_categories_layout_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#F8EBE7"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top_categories_image_id"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_65sdp"
                android:src="@drawable/edit_profile_icon"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/top_categories_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JEE And NEET Exam"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>