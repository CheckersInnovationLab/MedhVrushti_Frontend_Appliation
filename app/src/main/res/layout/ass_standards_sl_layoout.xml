<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/Ass_standards_sl_cardView_id"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
             android:background="#F7F8FA"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/folders_icon"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course name"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#191818"
                    android:id="@+id/Ass_standards_name_id"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by Checkers Innovation Lab"
                    android:textSize="@dimen/_12ssp"
                    android:layout_below="@+id/Ass_standards_name_id"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:textStyle="italic"
                    android:id="@+id/Ass_standards_author_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Books"
                    android:layout_below="@+id/Ass_standards_author_name"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:textColor="#495595"
                    android:id="@+id/Ass_standards_cat1_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:layout_below="@+id/Ass_standards_author_name"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="#495595"
                    android:layout_toRightOf="@+id/Ass_standards_cat1_text"
                    android:id="@+id/Ass_standards_cat2_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video lectures"
                    android:layout_below="@+id/Ass_standards_author_name"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:textColor="#495595"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/Ass_standards_cat2_text"
                    android:id="@+id/Ass_standards_cat3_text"/>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>