<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ru.noties.jlatexmath.JLatexMathView
            android:id="@+id/Theory_assessment_Main_Que_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dip"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:jlmv_alignVertical="center"
            app:jlmv_alignHorizontal="center"
            app:jlmv_textSize="20sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/parent_recycleView_id"
            android:layout_below="@+id/Theory_assessment_Main_Que_id"
            android:padding="10dp"/>



    </RelativeLayout>

</RelativeLayout>