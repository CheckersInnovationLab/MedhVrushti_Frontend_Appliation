   <RelativeLayout
       android:id="@+id/Home_imageSlider_layout_id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/_7sdp"
       android:background="@drawable/card_corner_back_view"
       android:layout_marginRight="@dimen/_7sdp"
          >

       <com.smarteist.autoimageslider.SliderView
           android:id="@+id/Home_imageSlider"
           android:layout_width="match_parent"

           android:layout_marginBottom="@dimen/_1sdp"
           android:layout_height="@dimen/_200sdp"
           app:sliderAnimationDuration="400"
           app:sliderAutoCycleDirection="back_and_forth"
           app:sliderAutoCycleEnabled="true"
           app:sliderIndicatorAnimationDuration="6000"
           app:sliderIndicatorGravity="center_horizontal|bottom"
           app:sliderIndicatorMargin="@dimen/_5sdp"
           app:sliderIndicatorOrientation="horizontal"
           app:sliderIndicatorPadding="@dimen/_2sdp"
           app:sliderIndicatorRadius="@dimen/_1sdp"
           app:sliderIndicatorSelectedColor="#5A5A5A"
           app:sliderIndicatorUnselectedColor="#FFF"
           app:sliderScrollTimeInSec="5"
           app:sliderStartAutoCycle="true" />


   </RelativeLayout>

   <LinearLayout
       android:id="@+id/Top_categories_MN_layout_id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_below="@+id/Home_imageSlider_layout_id">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_10sdp"
          android:orientation="horizontal">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Top Categories"
              android:textSize="@dimen/_18ssp"
              android:textStyle="bold"
              android:layout_marginLeft="@dimen/_10sdp"
              android:textColor="@color/black"/>


          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="See All"
              android:textStyle="bold"
              android:textSize="@dimen/_14ssp"
              android:gravity="end"
              android:textColor="#777676"
              android:layout_marginRight="@dimen/_10sdp"/>


      </LinearLayout>

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/Home_top_categories_recyclerview"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_centerHorizontal="true" />
   </LinearLayout>


    <LinearLayout
