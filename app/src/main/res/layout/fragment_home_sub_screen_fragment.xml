   <RelativeLayout
       android:id="@+id/Home_imageSlider_layout_id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/_7sdp"
       android:background="@drawable/card_corner_back_view"
       android:layout_marginRight="@dimen/_7sdp"
          >

       <com.smarteist.autoimageslider.SliderView
           android:id="@+id/Home_imageSlider"
           android:layout_width="match_parent"

           android:layout_marginBottom="@dimen/_1sdp"
           android:layout_height="@dimen/_200sdp"
           app:sliderAnimationDuration="400"
           app:sliderAutoCycleDirection="back_and_forth"
           app:sliderAutoCycleEnabled="true"
           app:sliderIndicatorAnimationDuration="6000"
           app:sliderIndicatorGravity="center_horizontal|bottom"
           app:sliderIndicatorMargin="@dimen/_5sdp"
           app:sliderIndicatorOrientation="horizontal"
           app:sliderIndicatorPadding="@dimen/_2sdp"
           app:sliderIndicatorRadius="@dimen/_1sdp"
           app:sliderIndicatorSelectedColor="#5A5A5A"
           app:sliderIndicatorUnselectedColor="#FFF"
           app:sliderScrollTimeInSec="5"
           app:sliderStartAutoCycle="true" />


   </RelativeLayout>

             <androidx.cardview.widget.CardView
                 android:id="@+id/Home_active_subscription_details_id"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 app:cardCornerRadius="@dimen/_15sdp"
                 android:layout_below="@+id/Home_imageSlider_layout_id"
                 android:layout_margin="@dimen/_10sdp">

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="#EEF3F8">




                     <TextView
                         android:id="@+id/Home_subscriptionDetails_heading_id"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="#3C1A78"
                         android:text="Active Subscriptions"
                         android:textSize="@dimen/_20ssp"
                         android:textStyle="bold"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="@dimen/_15sdp"/>

                     <LinearLayout
                         android:id="@+id/Home_subscription_details_id"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_below="@+id/Home_subscriptionDetails_heading_id"
                         android:layout_marginTop="@dimen/_10sdp"
                         android:weightSum="2"
                         android:orientation="horizontal">


                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:orientation="vertical">
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="0dp"
                                 android:orientation="vertical"
                                 android:layout_weight="1">

                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Course:"
                                     android:textSize="@dimen/_15ssp"
                                     android:textStyle="bold"
                                     android:layout_marginLeft="@dimen/_10sdp"
                                     android:textColor="@color/black"/>

                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Hsc 11th Science Test Series"
                                     android:textSize="@dimen/_15ssp"
                                     android:textStyle="bold"
                                     android:textColor="#6F6F70"

                                     android:layout_marginLeft="@dimen/_10sdp"
                                     android:layout_marginTop="@dimen/_5sdp"/>

                             </LinearLayout>

                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="0dp"
                                 android:orientation="vertical"
                                 android:layout_weight="1">

                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Enrollment Date:"
                                     android:layout_marginTop="@dimen/_10sdp"
                                     android:textStyle="bold"
                                     android:textColor="@color/black"
                                     android:textSize="@dimen/_15ssp"
                                     android:layout_marginLeft="@dimen/_10sdp"/>

                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="12-Aug-2023"
                                     android:layout_marginLeft="@dimen/_10sdp"
                                     android:layout_marginTop="@dimen/_5sdp"
                                     android:textSize="@dimen/_15ssp"
                                     android:textColor="#6F6F70"
                                     android:textStyle="bold"/>

                             </LinearLayout>





                         </LinearLayout>

                         <LinearLayout
                             android:layout_width="@dimen/_1sdp"
                             android:layout_height="match_parent"
                             android:background="#B6B6B6"
                             android:layout_marginTop="@dimen/_10sdp"
                             android:layout_marginBottom="@dimen/_10sdp"/>



                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:layout_weight="1"
                             android:orientation="vertical">


                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="0dp"
                                 android:orientation="vertical"
                                 android:layout_weight="1">


                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Days Remaining:"
                                     android:textStyle="bold"
                                     android:textColor="@color/black"
                                     android:textSize="@dimen/_15ssp"
                                     android:layout_marginLeft="@dimen/_10sdp"/>

                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="35 days"
                                     android:layout_marginLeft="@dimen/_10sdp"
                                     android:layout_marginTop="@dimen/_5sdp"
                                     android:textColor="#6F6F70"
                                     android:textSize="@dimen/_15ssp"
                                     android:textStyle="bold"/>

                             </LinearLayout>
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="0dp"
                                 android:orientation="vertical"
                                 android:layout_weight="1">


                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Attempts:"
                                     android:layout_marginTop="@dimen/_10sdp"
                                     android:textStyle="bold"
                                     android:layout_marginRight="@dimen/_10sdp"
                                     android:textColor="@color/black"
                                     android:textSize="@dimen/_15ssp"
                                     android:layout_marginLeft="@dimen/_10sdp"/>

                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="10 "
                                     android:layout_marginLeft="@dimen/_10sdp"
                                     android:layout_marginTop="@dimen/_5sdp"
                                     android:textColor="#6F6F70"
                                     android:textSize="@dimen/_15ssp"
                                     android:textStyle="bold"/>
                             </LinearLayout>
                         </LinearLayout>




                     </LinearLayout>


                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/_35sdp"
                         android:layout_below="@+id/Home_subscription_details_id"
                         android:background="@drawable/button_back_view"
                         android:backgroundTint="#441F85"
                         android:layout_marginLeft="@dimen/_20sdp"
                         android:layout_marginRight="@dimen/_20sdp"
                         android:layout_marginTop="@dimen/_15sdp"
                         android:layout_marginBottom="@dimen/_10sdp">

                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="View All"
                             android:textSize="@dimen/_15ssp"
                             android:textStyle="bold"
                             android:textColor="@color/white"
                             android:layout_centerInParent="true"/>
                     </RelativeLayout>



