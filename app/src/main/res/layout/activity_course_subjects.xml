<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".commonActivityPackage.CourseSubjectsActivity">



  <ImageView
      android:id="@+id/Courses_subject_back_button_id"
      android:layout_width="@dimen/_25sdp"
      android:layout_height="@dimen/_25sdp"
      android:src="@drawable/arrow_back_black"
      android:layout_marginLeft="@dimen/_10sdp"
      android:layout_marginTop="@dimen/_10sdp"/>

  <TextView
      android:id="@+id/Courses_subject_text_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Course Subjects"
      android:textStyle="bold|italic"
      android:textSize="@dimen/_20ssp"
      android:layout_gravity="center_horizontal"
      android:textColor="#474747"/>


  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/Courses_subject_recycler_id"
      android:layout_width="match_parent"
      android:layout_marginTop="@dimen/_7ssp"
      android:layout_height="wrap_content">


  </androidx.recyclerview.widget.RecyclerView>
  <ProgressBar
      android:id="@+id/course_subject_pbLoading"
      android:visibility="gone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:layout_gravity="center"/>



</LinearLayout>