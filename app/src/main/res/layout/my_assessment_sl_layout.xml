<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="#F6F6FB"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="@dimen/_90sdp"
                android:src="@drawable/exam_icon2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/myAssessment_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#454545"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="set 1  Introduction to linear regression and their concepth"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_15ssp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#838383"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="submitted_date:"
                        android:textStyle="bold|italic"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#605F5F"/>
                    <TextView
                        android:id="@+id/myAssessment_SubmittedDate_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9/11/2023"
                        android:textStyle="bold|italic"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="#605F5F"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Obtained Marks:"
                        android:textStyle="bold|italic"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="#218F25"/>
                    <TextView
                        android:id="@+id/myAssessment_ObtainedMarks_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="#218F25"
                        android:textStyle="bold|italic"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="#218F25"
                        android:textStyle="bold|italic"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:textSize="@dimen/_18ssp" />
                    <TextView
                        android:id="@+id/myAssessment_totalMarks_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="#218F25"
                        android:textStyle="bold|italic"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:textSize="@dimen/_15ssp" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp">

                    <TextView
                        android:id="@+id/myAssessment_checking_status_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Checked"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="italic|bold"
                        android:textColor="#EA4F4F"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"/>

                    <Button
                        android:id="@+id/myAssessment_view_result_button_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Result"
                        android:backgroundTint="#0DAC13"
                        android:visibility="invisible"
                        app:backgroundTint="#0DAC13"
                        android:layout_toRightOf="@+id/myAssessment_checking_status_id"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>