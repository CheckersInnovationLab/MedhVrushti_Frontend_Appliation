<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <TextView
                    android:id="@+id/Solution_question_id3001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What are MCQ questions?What are MCQ questions?
A multiple-choice question (MCQ) is composed of two parts: a stem that identifies the question or problem"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <TextView
                android:id="@+id/Option1_id3001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1) Option 1"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"

                android:textSize="@dimen/_13ssp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/Option2_id3001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2) Option 2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"

                android:textSize="@dimen/_13ssp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/Option3_id3001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3) Option 3"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"

                android:textSize="@dimen/_13ssp"
                android:textStyle="italic"/>


            <TextView
                android:id="@+id/Option4_id3001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4) Option 4"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                android:textStyle="italic"/>


            <Button
                android:id="@+id/assessment_description_button_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explanation"
                android:backgroundTint="#8F8F8F"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_8sdp"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_7sdp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="#F6F6F6"
            android:id="@+id/assessment_description_layout_id">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <TextView
                    android:id="@+id/assessment_description_text_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#8E8C8C"
                    android:text="A mean solar day on the Moon, a lunar day for short, is 29.5306 Earth days. Local lunar days can vary even more than solar days on Earth, over 6 hours shorte"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>




        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>