<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:background="#F5F8FA"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/RankingLeaderBoard_rank_id"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="1"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/question_number_back"
                android:backgroundTint="#5A5A5A"
                 android:textColor="#fff"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/RankingLeaderBoard_UserName_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0583BC"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="User Name"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="end"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/RankingLeaderBoard_UserMarks_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#13A819"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/layout_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2596C8"
        />



</RelativeLayout>