<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".commonActivityPackage.Contact_Us_Screen">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/editEducationDetails_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="?attr/colorPrimary"
        app.background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit_education_detailsToolbar_back_button"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_icon_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact us"
                android:layout_toRightOf="@id/edit_education_detailsToolbar_back_button"
                android:id="@+id/edit_education_detailsToolbar_title"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

   <androidx.cardview.widget.CardView
       android:layout_below="@+id/editEducationDetails_toolbar_id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/_5sdp"
       app:cardCornerRadius="@dimen/_10sdp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_marginLeft="@dimen/_5sdp"
           android:layout_marginRight="@dimen/_5sdp"

           android:background="#F3F5F6">




           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/password_text_input"
               style="@style/TextInputLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Your Name"
               app:errorEnabled="true">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/password_edit_text"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_40sdp"
                   android:inputType="textPassword" />

           </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/password_text2_input"
               style="@style/TextInputLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Your Email Id"
               app:errorEnabled="true">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/password_edit2_text"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_40sdp"
                   android:inputType="textPassword" />

           </com.google.android.material.textfield.TextInputLayout>



           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/password_text3_input"
               style="@style/TextInputLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Your Message"

               app:errorEnabled="true">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/password_edit3_text"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_120sdp"
                   android:inputType="textPassword" />

           </com.google.android.material.textfield.TextInputLayout>


           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Send Message"
               android:layout_gravity="center_horizontal"
               android:background="@drawable/button_back_new"
               android:layout_marginBottom="@dimen/_10sdp"/>


       </LinearLayout>


   </androidx.cardview.widget.CardView>

</RelativeLayout>