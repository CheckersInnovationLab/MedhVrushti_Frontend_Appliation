<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    tools:context=".AssessmentSection_pkg.Ass_Subjects_activity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ass_subject_searchView_layout"
                        android:layout_marginTop="10dp">

                        <androidx.appcompat.widget.SearchView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/search_bar_back_layout"
                            />


                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        app:cardCornerRadius="@dimen/_7sdp"
                        android:layout_below="@+id/ass_subject_searchView_layout"
                        android:id="@+id/ass_mn_crs_Subscription_ads_cardView_id">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="#DEEDEF">

                            <RelativeLayout
                                android:layout_width="250dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ace Your Preparation "
                                    android:textStyle="bold"
                                    android:textSize="23dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/ace_preparation_text_id"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Learn with live classes from top educators,get personalised guidance through 1:1 live mentorship and lot "
                                    android:layout_below="@+id/ace_preparation_text_id"
                                    android:layout_margin="5dp"
                                    android:textColor="@color/black"
                                    android:id="@+id/text1_id"/>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Get Subscription"
                                    android:layout_below="@+id/text1_id"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerHorizontal="true"
                                    android:backgroundTint="#21B827"
                                    app:backgroundTint="#21B827"
                                    android:id="@+id/get_subscription_button_id"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="-70dp"
                                android:gravity="end">


                                <ImageView
                                    android:layout_width="@dimen/_170sdp"
                                    android:layout_height="@dimen/_180sdp"
                                    android:src="@drawable/assessmnet_main_courses"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginLeft="@dimen/_30sdp"
                                    android:layout_marginRight="-20dp"
                                    android:layout_marginTop="-20dp"/>



                                <!--                        <com.airbnb.lottie.LottieAnimationView-->
                                <!--                            android:layout_width="wrap_content"-->
                                <!--                            android:layout_height="match_parent"-->
                                <!--                            app:lottie_autoPlay="true"-->
                                <!--                            app:lottie_loop="true"-->
                                <!--                            app:lottie_rawRes="@raw/standing_boy_studing_lottie" />-->

                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Subjects"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:layout_below="@+id/ass_mn_crs_Subscription_ads_cardView_id"
                android:layout_centerHorizontal="true"
                android:id="@+id/Ass_Subjects_text_id"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#3F51B5"/>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Ass_Subjects_text_id"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/Ass_Subjects_recyclerView_id"/>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>